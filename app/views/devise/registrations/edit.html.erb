<div class="container py-6 px-4 mx-auto max-w-xl">
<%= form_for(@user, html: { method: :put, class: "space-y-8" }) do |f| %>
  <div>
    <div class="flex items-center">
      <div class="mr-4">
        <img class="h-14 w-14 rounded-full" src="<%= current_user.gravatar %>" alt="Your Gravatar">
      </div>

      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Edit your profile</h3>
        <p class="mt-1 text-sm text-gray-500">Update your details.</p>
      </div>
    </div>

    <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
      <div class="sm:col-span-6">
        <%= f.label :name, class: "mb-1 block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, autocomplete: 'name', class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>

    <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
      <div class="sm:col-span-6">
        <%= f.label :email, class: "mb-1 block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autocomplete: 'email', class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
      <div class="sm:col-span-6">
        <%= f.label :password, class: "mb-1 block text-sm font-medium text-gray-700" do %>
          Update password
          <span class="ml-1 text-xs text-gray-400 inline font-normal">Leave blank if you don't want to change this.</span>
        <% end %>
        
        <%= f.password_field :password, autocomplete: 'new-password', class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>

      <div class="sm:col-span-6">
        <%= f.label :password_confirmation, class: "mb-1 block text-sm font-medium text-gray-700" do %>
          Confirm updated password
        <% end %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <%= link_to 'Cancel', root_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

      <%= f.submit "Save", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %> 
    </div>
  </div>
<% end %>

<div class="px-4 py-4 mt-14 border-4 border-red-300 bg-red-50 border-dashed rounded-lg">
  <div>
    <h3 class="text-lg leading-6 font-medium text-gray-900">Cancel your account</h3>
    <p class="mt-1 text-sm text-gray-500">You can cancel your account below. This can't be reversed!</p>
  </div>

  <%= button_to "Cancel my account", registration_path('user'), data: { confirm: "Are you sure?" }, method: :delete, class: 'mt-4 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500' %>
  </div>
</div>
</div>