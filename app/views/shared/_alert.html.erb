<%

# Requires
# type:string
# message:string

types_to_colors = {
  notice: 'blue',
  alert: 'red',
  warning: 'yellow',
  success: 'green'
}

types_to_icon_paths = {
  notice: 'M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z',
  alert: 'M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z',
  warning: 'M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z',
  success: 'M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z'
}

color = types_to_colors.fetch(type.to_sym, types_to_colors[:notice])
icon_path = types_to_icon_paths.fetch(type.to_sym, types_to_icon_paths[:notice])

%>

<% 
  # This is a hack to make Tailwind generate all the required CSS #
  "bg-blue-50"
  "bg-blue-100"
  "text-blue-400"
  "text-blue-800"
  "text-blue-800"

  "bg-red-50"
  "bg-red-100"
  "text-red-400"
  "text-red-800"
  "text-red-800"

  "bg-yellow-50"
  "bg-yellow-100"
  "text-yellow-400"
  "text-yellow-800"
  "text-yellow-800"

  "bg-green-50"
  "bg-green-100"
  "text-green-400"
  "text-green-800"
  "text-green-800" %>

<div class="rounded-md bg-<%= color %>-50 p-4 mb-2" id="flash-<%= index %>">
  <div class="flex">
    <div class="flex-shrink-0">
      <svg class="h-5 w-5 text-<%= color %>-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="<%= icon_path %>" clip-rule="evenodd" />
      </svg>
    </div>
    <div class="ml-3">
      <p class="text-sm font-medium text-<%= color %>-800"><%= message %></p>
    </div>
    <div class="ml-auto pl-3">
      <div class="-mx-1.5 -my-1.5">
        <button type="button" class="inline-flex bg-<%= color %>-50 rounded-md p-1.5 text-<%= color %>-400 hover:bg-<%= color %>-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-green-50 focus:text-<%= color %>-600" onclick="document.getElementById('flash-<%= index %>').remove()">
          <span class="sr-only">Dismiss</span>
          <!-- Heroicon name: solid/x -->
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>